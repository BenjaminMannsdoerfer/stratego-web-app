# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Stratego

GET     /                           controllers.StrategoController.stratego

GET     /about                      controllers.StrategoController.about

GET     /save                       controllers.StrategoController.saveGame

GET     /load                       controllers.StrategoController.loadGame

GET     /undo                       controllers.StrategoController.undoGame

GET     /redo                       controllers.StrategoController.redoGame


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
