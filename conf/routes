# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Stratego

GET     /                               controllers.StrategoController.home

GET     /about                          controllers.StrategoController.about

GET     /stratego                       controllers.StrategoController.stratego

GET     /enterPlayer                    controllers.StrategoController.enterPlayer(player1: String, player2:String)

GET     /setPlayer/:player1/:player2    controllers.StrategoController.setPlayer(player1: String, player2:String)

GET     /init                           controllers.StrategoController.init

GET     /setCharacter/:row/:col/:charac controllers.StrategoController.setCharacter(row: Int, col:Int, charac: String)

GET     /move/:dir/:row/:col            controllers.StrategoController.move(dir: Char, row:Int, col:Int)

GET     /attack/:rowA/:colA/:rowD/:colD controllers.StrategoController.attack(rowA:Int, colA:Int, rowD:Int, colD:Int)

GET     /save                           controllers.StrategoController.saveGame

GET     /load                           controllers.StrategoController.loadGame

GET     /undo                           controllers.StrategoController.undoGame

GET     /redo                           controllers.StrategoController.redoGame

GET     /small                          controllers.StrategoController.smallGame

GET     /medium                         controllers.StrategoController.mediumGame

GET     /large                          controllers.StrategoController.largeGame


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
